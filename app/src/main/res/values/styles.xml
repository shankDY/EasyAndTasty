<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/burgundy_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/whitish</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="recipe_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recipe_input" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/recipe_input_bg</item>
    </style>

    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/recipe_input_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="big_input">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/big_input_bg</item>
    </style>

    <style name="big_btn" parent="big_input">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
    </style>
    
    <style name="small_btn" parent="big_btn">
        <item name="android:layout_width">80dp</item>
    </style>

</resources>
