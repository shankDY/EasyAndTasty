<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <com.shank.eat.screens.common.CustomImageButton
            android:id="@+id/buttonPhoto"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_photo_camera"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/photo_text"
              android:text="@string/take_photo"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="20dp"
              android:textSize="15sp"
              android:layout_marginStart="5dp"
              android:textStyle="bold"
              app:layout_constraintStart_toEndOf="@id/buttonPhoto"/>

    <com.shank.eat.screens.common.CustomImageButton
            android:id="@+id/buttonGallery"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonPhoto"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gallery"
            android:layout_marginBottom="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/take_picture"
              app:layout_constraintTop_toBottomOf="@+id/photo_text"
              android:layout_marginTop="25dp"
              android:textSize="15sp"
              android:textStyle="bold"
              android:layout_marginStart="5dp"
              app:layout_constraintStart_toEndOf="@id/buttonGallery"
              app:layout_constraintBottom_toBottomOf="@+id/buttonGallery"
              android:layout_marginBottom="5dp"/>
</android.support.constraint.ConstraintLayout>