<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/login_nav"
            app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment"
              android:name="homeproject.example.com.myhomeproject.screens.register_and_login_screens.login.LoginFragment"
              android:label="LoginFragment"
              tools:layout="@layout/login_fragment">
        <action android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment"/>
        <action android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment"/>
    </fragment>

    <fragment android:id="@+id/registerFragment"
              android:name="homeproject.example.com.myhomeproject.screens.register_and_login_screens.register.RegisterFragment"
              android:label="RegisterFragment"
              tools:layout="@layout/register_fragment">
    </fragment>

    <fragment android:id="@+id/forgotPasswordFragment"
              android:name="homeproject.example.com.myhomeproject.screens.register_and_login_screens.forgot_pass.ForgotPasswordFragment"
              android:label="ForgotPasswordFragment"
              tools:layout="@layout/forgot_password_fragment">
        <action android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
                app:destination="@id/loginFragment"/>
    </fragment>
</navigation>
